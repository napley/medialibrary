{% extends 'default/front.html.twig' %}

{% block title %}
    {% if search is not empty %}
        Search : {{ search }} - medialibrary 
    {% else %}
        Home - medialibrary
    {% endif %}
{% endblock %}

{% block contenu %}
    <div class="container">

        <div class="starter-template">
            <div class="col-md-12">
                <div class="panel panel-primary panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Search engine (keyword separated by coma : ,)</h3>
                    </div>
                    <div class="panel-body">
                        <div class="input-group col-md-12">
                            <form action="{{ path('search_form') }}" class="form-inline" method="post" role="search">
                                <div class="form-group col-md-11">
                                    <input type="text" name="keywords" class="form-control" value="{{ search }}" placeholder="Search for book, dvd, bluray ...">
                                </div>
                                <button class="btn btn-default col-md-1" type="submit">Go!</button>
                            </form>
                        </div><!-- /input-group -->
                    </div>
                </div>
            </div>
            <h1>Latest books</h1>
            <div class="row">
                {% for book in books %}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="..." alt="...">
                            <div class="caption">
                                <h3>{{ book.title }}</h3>
                                <p>{{ book.author }}</p>
                                <p><a href="{{ path('detail_book', {'id' : book.getId}) }}" class="btn btn-primary" role="button">See more details</a></p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <h1>Latest dvds</h1>
            <div class="row">
                {% for dvd in dvds %}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="..." alt="...">
                            <div class="caption">
                                <h3>{{ dvd.title }}</h3>
                                <p>{{ dvd.director  }}</p>
                                <p><a href="{{ path('detail_dvd', {'id' : dvd.getId}) }}" class="btn btn-primary" role="button">See more details</a></p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <h1>Latest blurays</h1>
            <div class="row">
                {% for bluray in blurays %}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="..." alt="...">
                            <div class="caption">
                                <h3>{{ bluray.title }}</h3>
                                <p>{{ bluray.director  }}</p>
                                <p><a href="{{ path('detail_bluray', {'id' : bluray.getId}) }}" class="btn btn-primary" role="button">See more details</a></p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div><!-- /.container -->
{% endblock %}

{% block stylesheets %}
{% endblock %}
