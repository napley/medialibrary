{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

      <div class="starter-template">
          
        <h1>Latest books</h1>
        <div class="row">
            {% for book in books %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="..." alt="...">
                    <div class="caption">
                        <h3>{{ book.title }}</h3>
                        <p>{{ book.author }}</p>
                        <p><a href="#" class="btn btn-primary" role="button">See more details</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        
        <h1>Latest dvds</h1>
        <div class="row">
            {% for dvd in dvds %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="..." alt="...">
                        <div class="caption">
                            <h3>{{ dvd.title }}</h3>
                            <p>{{ dvd.director  }}</p>
                            <p><a href="#" class="btn btn-primary" role="button">See more details</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <h1>Latest blurays</h1>
        <div class="row">
            {% for bluray in blurays %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="..." alt="...">
                    <div class="caption">
                        <h3>{{ bluray.title }}</h3>
                        <p>{{ bluray.director  }}</p>
                        <p><a href="#" class="btn btn-primary" role="button">See more details</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
      </div>

    </div><!-- /.container -->
{% endblock %}

{% block stylesheets %}
{% endblock %}
